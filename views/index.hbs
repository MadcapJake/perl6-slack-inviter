<!DOCTYPE html>
<html>
  <head>
    {{> head}}
  </head>
  <body>
    <div id=wrapper>
      <div class=main>
        <div class=header>
          <h1>»ö«   <strong>{{community}}</strong>   »ö«</h1>
          <h2>Enter your email below to join the {{community}} community on Slack!</h2>
        </div>
        <hr>
        <div class=content>
          <div class=information>
            <form class=form action="/invite" method="POST" id="join-form">
              <input type="text" name="email" placeholder="Enter Your Email Address"
                     id="slack-email" class=field>
              <input type="submit" value="Join" class=submit>
            </form>
          </div>
        </div>
      </div>
    </div>
    <script type="text/javascript">
      var form  = document.getElementById('join-form'),
          email = document.getElementById('slack-email');
      form.addEventListener('submit', function(evt) {
        if (!email.value) {
          evt.preventDefault();
        }
      });
    </script>
  </body>
</html>
